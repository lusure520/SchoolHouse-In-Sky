<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SendEmail.Home">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10" Orientation="Vertical">
            
            <Label Text="Home Page" HorizontalOptions="Center" VerticalOptions="Start" x:Name="homeTitle" />
            <Label Text="{Binding MissionStatement}" HorizontalOptions="Center" VerticalOptions="Start" FontSize="20" x:Name="mission_Statement"/>
            <Label Text="{Binding HistoryStatement}" HorizontalOptions="Center" VerticalOptions="Start" FontSize="20" x:Name="history_Statement"/>
            <Button Text="Edit" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>