<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SendEmail.EditPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10" Orientation="Vertical">

            <Label Text="Edit The Content" HorizontalOptions="Center" VerticalOptions="Start"  />
            <Entry Text="{Binding EditMissionStatement}" FontSize="15" x:Name="edit_MissionStatement"/>
            <Entry Text="{Binding EditHistoryStatement}" FontSize="15" x:Name="edit_HistoryStatement"/>
            <Button Text="Save" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>